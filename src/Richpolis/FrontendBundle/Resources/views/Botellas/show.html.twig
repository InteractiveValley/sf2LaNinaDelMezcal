{% extends "BackendBundle::backend.html.twig" %}

{% block menu_horizontal %}
    {% include 'BackendBundle:Default:menu_horizontal.html.twig' with {'pagina': 'botellas'} %}
{% endblock %}

{% block siderbar %}  
    {% include 'BackendBundle:Default:siderbar.html.twig' with {'pagina': 'botellas'} %}
{% endblock %}

{% block body %}

<h1>Botella "{{entity.botella}}"</h1>
    <table class="record_properties table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Botella</th>
                <td>{{ entity.botella }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ entity.descripcion | raw }}</td>
            </tr>
            <tr>
                <th>Clase</th>
                <td>{{ entity.clase }}</td>
            </tr>
            <tr>
                <th>Style</th>
                <td>{{ entity.style }}</td>
            </tr>
            <tr>
                <th>Imagen</th>
                <td><img src="{{ entity.webPath }}" alt="{{entity.botella}}" style="max-width: 300px;"/></td>
            </tr>
            <tr>
                <th>Shop MÃ©xico</th>
                <td>{{ entity.linkShopMexico }}</td>
            </tr>
            <tr>
                <th>Shop USA</th>
                <td>{{ entity.linkShopUsa }}</td>
            </tr>
            <tr>
                <th>Activa?</th>
                <td>{{ entity.isActive|isActive|raw }}</td>
            </tr>
            <tr>
                <th>Creado</th>
                <td>{{ entity.createdAt|date('d/m/Y H:i:s') }}</td>
            </tr>
            <tr>
                <th>Actualizado</th>
                <td>{{ entity.updatedAt|date('d/m/Y H:i:s') }}</td>
            </tr>
        </tbody>
    </table>
    <ul class="record_actions nav nav-pills">
        <li>
            <button class="btn" onclick="location.href='{{ path('botellas') }}'">
                Regresar
            </button>
        </li>
        <li>&nbsp;</li>
        <li>
            <button class="btn btn-success" onclick="location.href='{{ path('botellas_edit', { 'id': entity.id }) }}'">
                Editar
            </button>
        </li>
        <li>&nbsp;</li>
        <li>
            <form action="{{ path('botellas_delete', { 'id': entity.id }) }}" method="post">
                    {{ form_widget(delete_form) }}
                    <button class="btn btn-danger" type="submit">Eliminar</button>
            </form>
        </li>
    </ul>
{% endblock %}
