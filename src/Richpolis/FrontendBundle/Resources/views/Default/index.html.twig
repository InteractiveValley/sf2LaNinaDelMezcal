{% block body %}
<section id="contenido">
    <article id="content-slider">
        <div id="slider">
            <div id="mask">
                <ul>
                    <li id="first" class="firstanimation">
                        <a {% if galerias[0].descripcion | length > 0 %} href="{{galerias[0].descripcion}}" target="_blank" {% else %} href="#"{% endif %}>
                            <img src="{{galerias[0].webPath | apply_filter('galeria_imagen_recortar')}}" alt="{{galerias[0].titulo}}"/>
                        </a>
                        <div class="tooltip">
                            <h1>{{galerias[0].titulo}}</h1>
                        </div>
                    </li>

                    <li id="second" class="secondanimation">
